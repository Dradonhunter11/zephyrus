<phpunit
        bootstrap="tests/lib/init.php"
        colors="true"
        backupGlobals="false"
        backupStaticAttributes="false"
        processIsolation="false"
        stopOnFailure="true"
        syntaxCheck="false"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true">
    <testsuites>
        <testsuite name="application">
            <directory>tests/application</directory>
            <!-- <file>tests/application/FormatterTest.php</file> -->
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <file>./src/zephyrus/application/Bootstrap.php</file>
                <file>./src/zephyrus/application/Configuration.php</file>
                <file>./src/zephyrus/application/Session.php</file>
                <file>./src/zephyrus/network/RouterEngine.php</file>
                <file>./src/zephyrus/security/Cryptography.php</file>
                <file>./src/zephyrus/security/EncryptedSessionHandler.php</file>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="tests/coverage/result.xml" />
        <log type="coverage-html" target="tests/coverage/result" />
    </logging>
</phpunit>